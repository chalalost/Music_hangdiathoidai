@model PagedList.IPagedList<OnlineMusic.EF.USER>
@using PagedList.Mvc;
@{ ViewBag.Title = "Danhsach";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }
<div>
    <button class="btn btn-light" type="button">
        @Html.ActionLink("Thêm người dùng", "Index")
    </button>

</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tài khoản</th>
                        <th>Tên</th>
                        <th>Địa chỉ</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
        <tr>
            <td>@item.ID</td>
            <td>@item.UserName</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.Status</td>
            <td>
                <a href="/Admin/User/Sua?userName=@item.UserName">Sửa</a>
                |
                <a href="/Admin/User/Xoa?userName=@item.UserName"> Xóa</a>
            </td>
        </tr>}

                </tbody>
            </table>
            @*@Html.PagedListPager(Model, Page => Url.Action("Danhsach", new { Page }));*@
        </div>
    </div>
</div>

